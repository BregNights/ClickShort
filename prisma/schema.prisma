generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ShortCode {
  id          Int      @id @default(autoincrement())
  originalUrl String
  shortCode   String   @unique
  clicks      Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())

  @@index([shortCode])
  @@map("short_code")
}
